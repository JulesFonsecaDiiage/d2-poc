{# templates/admin/dashboard.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="container-fluid py-4">
        <div class="row">
            {# KPI cards #}
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Utilisateurs actifs</h5>
                        <p class="card-text display-4">{{ nbActiveUsers }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Commandes</h5>
                        <p class="card-text display-4">76</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Revenus</h5>
                        <p class="card-text display-4">14 320€</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-danger mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Alertes</h5>
                        <p class="card-text display-4">5</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            {# Chart Section #}
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">Statistiques des ventes</div>
                    <div class="card-body">
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>
            </div>

            {# Recent items #}
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">Derniers utilisateurs</div>
                    <ul class="list-group list-group-flush">
                        {% for user in users %}
                            <li class="list-group-item">{{ user.email }} - {{ user.createdAt|date('d/m/Y') }}</li>
                        {% else %}
                            <li class="list-group-item">Aucun utilisateur récent</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            {# Quick actions #}
            <div class="col">
                <div class="card">
                    <div class="card-header">Actions rapides</div>
                    <div class="card-body">
                        <a href="{{ ea_url().setController('App\\Controller\\Admin\\EntiteCrudController').setAction('new') }}" class="btn btn-outline-primary">
                            <i class="fa fa-user-plus"></i> Ajouter un utilisateur
                        </a>
                        <a href="{{ ea_url().setController('App\\Controller\\Admin\\OrderCrudController').setAction('index') }}" class="btn btn-outline-success">
                            <i class="fa fa-shopping-cart"></i> Voir les commandes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Chart.js #}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('salesChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Ventes',
                    data: [1200, 1500, 1100, 1800, 1700, 1900],
                    borderColor: 'rgba(75, 192, 192, 1)',
                    tension: 0.4,
                    fill: true,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                }]
            }
        });
    </script>
{% endblock %}